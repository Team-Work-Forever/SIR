{% extends 'secure/dashboard.twig' %}
{% block title %} Detalhe Receita {% endblock %}

{% block outlet %}
<div class="align-items-center m-auto vw-100 vh-100">
    <div class="text-black">
        <!-- Header -->
        <header class="p-3">
            <div class="row p-4">
                <div class="col-1">
                    <a href="#" class="goBack">
                        <i class="bi bi-arrow-down-circle"></i>
                    </a>
                </div>
                <div class="col-10 d-flex justify-content-center">
                    <h1>Bolo de Chocolate</h1>
                </div>
            </div>
            <div class="line"></div>
        </header>
    </div>

    <main class="overflow-auto scrollDashboardSpace">
        <div class="mx-3 px-2 py-2">
            <!-- Info Recipe -->
            <div class="row">
                <div class="container col-xl-6 col-12 info">
                    <h2 class="title text-decoration-underline">Informação da Receita</h2>
                    <div class="model-section col my-4">
                        <div class="col my-2">
                            <!-- Description -->
                            <p>Bolo de chocolate é um bolo simples ou confeitado, que leva chocolate derretido ou em pó.
                            </p>
                        </div>
                    </div>
                    <div class="model-section row my-4">
                        <!-- Portions -->
                        <div class="col-xl-6 col-12 row">
                            <h4 class="col-4">Porções</h4>
                            <div class="col-8 px-4 py-2">
                                <p>3-4 Pessoas</p>
                            </div>
                        </div>
                        <!-- Time -->
                        <div class="col-xl-6 col-12 row">
                            <h4 class="col-4">Tempo</h4>
                            <div class="col-8 px-4 py-2">
                                <p>1h30m</p>
                            </div>
                        </div>
                    </div>
                    <!-- Created by -->
                    <div class="row">
                        <h4 class="col-4">Criado por:</h4>
                        <div class="col-8 row py-2">
                            <a href="" class="col-5 link">
                                Quim Barreiros
                            </a>
                            <p class="col-4">12/11/2023</p>
                        </div>
                    </div>
                </div>
                <div class="container flex-column col-xl-6 col-12 d-flex justify-content-center">
                    <!-- Buttons -->
                    <div class="d-flex flex-wrap gap-2 justify-content-end my-2 mx-4 px-1">
                        <!-- <button type="button" class="btn buttonOptions text-black d-flex justify-content-around">
                            Privado
                            <i class="bi bi-lock-fill"></i>
                        </button> -->
                        <button type="button" class="btn buttonOptions text-black d-flex justify-content-around">
                            Favorito
                            <i class="bi bi-star"></i>
                        </button>
                        <button type="button" class="btn buttonOptions text-black d-flex justify-content-around">
                            Partilhar
                            <i class="bi bi-share-fill"></i>
                        </button>
                    </div>
                    <!-- Image -->
                    <div class="row justify-content-center">
                        <img src="{{ loadAsset('david.png') }}" class="infoImage image-fluid" alt="">
                    </div>
                </div>
            </div>
            <div class="row my-2">
                <div class="container col-xl-6 col-12 info">
                    <h2 class="title text-decoration-underline">Ingredientes</h2>
                    <div class="model-section col my-4">
                        <div class="col my-2">
                            <!-- Ingredients -->
                            <ul class="list-unstyled">
                                <li><i class="bi bi-diamond-fill"></i> Item 1</li>
                                <li><i class="bi bi-diamond-fill"></i> Item 2</li>
                                <li><i class="bi bi-diamond-fill"></i> Item 3</li>
                            </ul>
                        </div>
                    </div>
                    <h2 class="title text-decoration-underline">Preparação</h2>
                    <div class="model-section col my-4">
                        <div class="col my-2">
                            <!-- Actions -->
                            <ul class="list-unstyled">
                                <li><i class="bi bi-diamond-fill"></i> Passo 1</li>
                                <li><i class="bi bi-diamond-fill"></i> Passo 2</li>
                                <li><i class="bi bi-diamond-fill"></i> Passo 3</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="container flex-column col-xl-6 col-12 d-flex justify-content-center">
                    <!-- Chat -->
                    <div class="row">
                        <h4 class="d-flex justify-content-center text-decoration-underline orangeText">
                            Dicas
                        </h4>
                        <!-- Texts -->
                        <div class="my-2 px-4">
                            <div>sadasdas</div>
                        </div>
                        <!-- Inputs -->
                        <div class="row d-flex align-items-end justify-content-center mx-2 px-1">
                            <form action="" class="col-9">
                                <div class="text-field backgroundTransparent">
                                    <input placeholder="Escreva uma mensagem" type="text">
                                </div>
                            </form>
                            <button type="button" class="btn backgroundTransparent addButton text-black col-1">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Owner Options -->
    <!-- <a href="#" class="edit">
        <i class="bi bi-pencil"></i>
    </a>
    <a class="delete" type="submit" data-bs-toggle="modal" data-bs-target="#deleteRecipe">
        <i class="bi bi-trash3"></i>
    </a> -->

</div>

<!-- Delete Recipe Modal -->
<div class="modal" id="deleteRecipe" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Apagar Receita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Ao carregar no botão apagar, apagará para <span class="text-decoration-underline">SEMPRE</span> esta
                    receita das suas receitas.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn green" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn blue">Apagar</button>
            </div>
        </div>
    </div>
</div>

<script src="{{ loadJs('selector.js') }}"></script>
{% endblock %}