{% extends 'secure/dashboard.twig' %}
{% block title %} Criar Receita {% endblock %}

{% block outlet %}
<div class="align-items-center m-auto vw-100 vh-100">
    <div class="text-black">
        <!-- Header -->
        <header class="p-3">
            <div class="row p-4">
                <div class="col-1">
                    <a href="#" class="goBack">
                        <i class="bi bi-arrow-down-circle"></i>
                    </a>
                </div>
                <div class="col-10 d-flex justify-content-center">
                    <h1>Criar Receita</h1>
                </div>
            </div>
            <div class="line"></div>
        </header>
    </div>

    <main class="overflow-auto scrollDashboardSpace">
        <div class="mx-3 px-2 py-2">
            <!-- Info Recipe -->
            <div class="row">
                <div class="container col-xl-6 col-12 info">
                    <h2 class="title text-decoration-underline">Informação da Receita</h2>
                    <div class="model-section col my-4">
                        <div class="col my-2">
                            <!-- Name -->
                            <input id="name" type="text" class="form-control" placeholder="Nome" required />
                        </div>
                        <div class="col my-2">
                            <!-- Description -->
                            <input id="description" type="text" class="form-control" placeholder="Descrição" required />
                        </div>
                    </div>
                    <div class="model-section row my-4">
                        <!-- Portions -->
                        <div class="col-6 row">
                            <label class="col-3 py-1" for="portions">Porções</label>
                            <div class="col-9">
                                <select id="portions_quant" class="form-select" aria-label="1">
                                    <option selected>1</option>
                                </select>
                            </div>
                        </div>
                        <!-- Time -->
                        <div class="col-6 row">
                            <label class="col-3 py-1" for="time">Tempo</label>
                            <div class="col-9">
                                <select id="time" class="form-select" aria-label="30s - 0,5m">
                                    <option selected>30s - 0,5m</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="model-section row my-4">
                        <!-- Category -->
                        <label class="col-3 py-1" for="category">Categoria</label>
                        <div class="col-9">
                            <select id="category" class="form-select" aria-label="Sobremesa">
                                <option selected>Sobremesa</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="container col-xl-6 col-12 d-flex justify-content-center">
                    <img src="{{ loadAsset('david.png') }}" class="infoImage image-fluid" alt="">
                </div>
            </div>
            <!-- Ingredients and Actions -->
            <div class="row mt-4">
                <div class="container col-xl-6 col-12">
                    <h2 class="title text-decoration-underline">Ingredientes</h2>
                    <div class="table-container">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Apagar</th>
                                    <th scope="col">#</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Quantidade</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>
                                        <a href="#" class="remove">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </th>
                                    <th scope="row">1</th>
                                    <td>Nome 1</td>
                                    <td>100 g</td>
                                </tr>
                                <tr>
                                    <th>
                                        <a href="#" class="remove">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </th>
                                    <th scope="row">2</th>
                                    <td>Nome 2</td>
                                    <td>50 cl</td>
                                </tr>
                                <a class="add" type="submit" data-bs-toggle="modal" data-bs-target="#addIngredients">
                                    <i class="bi bi-plus-circle"></i>
                                </a>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Actions -->
                <div class="container col-xl-6 col-12">
                    <h2 class="title text-decoration-underline">Preparação</h2>
                    <div class="table-container">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Apagar</th>
                                    <th scope="col">#</th>
                                    <th scope="col">Descrição</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>
                                        <a href="#" class="remove">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </th>
                                    <th scope="row">1</th>
                                    <td>Ação 1</td>
                                </tr>
                                <tr>
                                    <th>
                                        <a href="#" class="remove">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </th>
                                    <th scope="row">2</th>
                                    <td>Ação 2</td>
                                </tr>
                                <a class="add" type="submit" data-bs-toggle="modal" data-bs-target="#addAction">
                                    <i class="bi bi-plus-circle"></i>
                                </a>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col d-flex justify-content-center mt-1 mb-4">
            <button type="button" class="btn blue">Criar Receita</button>
        </div>
    </main>

</div>

<!-- Add Ingredients Modal -->
<div class="modal" id="addIngredients" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <div class="row p-4">
                    <div class="col-1">
                        <a href="#" class="goBack">
                            <i class="bi bi-arrow-down-circle"></i>
                        </a>
                    </div>
                    <h2 class="col-11 d-flex justify-content-center modal-title">Adicionar Ingredientes</h2>
                </div>
            </div>
            <div class="modal-body d-flex gap-3 flex-column">
                <!-- SearchBar -->
                <div class="model-section col">
                    <form action="">
                        <div class="text-field">
                            <input placeholder="Pesquisar" type="text">
                            <span>
                                <button>
                                    <i class="bi bi-search"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
                <!-- Results -->
                <div class="model-section">
                    <div class="row mx-2">
                        <div class="form-check py-2 col-5">
                            <input class="form-check-input" type="checkbox" value="" id="checkedIngredient">
                            <label class="form-check-label" for="checkedIngredient">
                                Ingrediente 1
                            </label>
                        </div>
                        <div class="col-4">
                            <!-- Quantity -->
                            <input id="quantity" type="number" class="form-control" placeholder="Quantidade" />
                        </div>
                        <!-- Type of Measurement -->
                        <div class="col-3">
                            <select id="typeOfMeasurement" class="form-select" aria-label="g">
                                <option selected>g</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer row d-flex justify-content-center mt-5">
                <button type="button" class="btn green" data-bs-dismiss="modal">
                    Cancelar
                </button>
                <button type="button" class="btn blue">Adicionar</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Action Modal -->
<div class="modal" id="addAction" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <div class="row p-4">
                    <div class="col-1">
                        <a href="#" class="goBack">
                            <i class="bi bi-arrow-down-circle"></i>
                        </a>
                    </div>
                    <h2 class="col-11 d-flex justify-content-center modal-title">Adicionar Ação</h2>
                </div>
            </div>
            <div class="modal-body d-flex gap-3 flex-column">
                <!-- Action text -->
                <div class="model-section col">
                    <div class="col my-2">
                        <input id="description" type="text" class="form-control" placeholder="Descrição" required />
                    </div>
                </div>
                <div class="modal-footer row d-flex justify-content-center mt-5">
                    <button type="button" class="btn green" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="button" class="btn blue">Adicionar</button>
                </div>
            </div>
        </div>
    </div>


    <script src="{{ loadJs('selector.js') }}"></script>
    {% endblock %}