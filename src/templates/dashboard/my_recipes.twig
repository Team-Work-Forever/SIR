{% extends 'dashboard/dashboard.twig' %}
{% block title %} Minhas Receitas {% endblock %}

{% block outlet %}
<div class="flex-column vw-100 vh-100">
    <div class="text-black">
        <!-- Header -->
        <header class="p-3">
            <form action="">
                <div class="text-field">
                    <input placeholder="Pesquisar" type="text">
                    <span>
                        <button>
                            <i class="bi bi-search"></i>
                        </button>
                    </span>
                </div>
            </form>
            <div class="d-flex justify-content-center mt-4">
                <div class="selector"></div>
            </div>
        </header>
    </div>

    <main class="overflow-auto d-flex flex-column ms-5 gap-3 py-4 scrollDashboardSpace">
        <!-- My Recipes -->
        <div class="container">
            <h2 class="title">Minhas Receitas</h2>
            <div class="d-flex flex-wrap">
                <div class="card cardItem">
                    <img src="{{ loadAsset('david.png') }}" class="card-img-top" alt="">
                    <div class="card-body">
                        <div class="row">
                            <h5 class="card-title col-9">Bolo Chocolate</h5>
                            <a href="#" class="col-1">
                                <i class="bi bi-share-fill"></i>
                            </a>
                            <a href="#" class="col-1">
                                <i class="bi bi-star"></i>
                            </a>
                        </div>

                        <p class="card-text">Bolo de chocolate é um bolo simples ou confeitado, que leva chocolate
                            derretido ou em pó.</p>
                        <p class="card-text"><small class="text-body-secondary">Criado à 3 minutos</small></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Favorites -->
        <div class="container">
            <h2 class="title">Favoritas</h2>
            <div class="d-flex flex-wrap">
                <div class="card cardItem ">
                    <img src="{{ loadAsset('david.png') }}" class="card-img-top" alt="">
                    <div class="card-body">
                        <div class="row">
                            <h5 class="card-title col-9">Bolo Chocolate</h5>
                            <a href="#" class="col-1">
                                <i class="bi bi-share-fill"></i>
                            </a>
                            <a href="#" class="col-1">
                                <i class="bi bi-star-fill"></i>
                            </a>
                        </div>

                        <p class="card-text">Bolo de chocolate é um bolo simples ou confeitado, que leva chocolate
                            derretido
                            ou em pó.</p>
                        <p class="card-text"><small class="text-body-secondary">Criado à 3 minutos</small></p>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <a href="#" class="create">
        <i class="bi bi-plus-circle"></i>
    </a>

</div>
<script src="{{ loadJs('selector.js') }}"></script>
{% endblock %}