{% extends 'base.twig' %}
{% block title %} Esqueceu-se da Palavra-Chave {% endblock %}

{% block content %}
<main class="d-flex w-100 position-fixed justify-content-center align-items-center h-100 p-5 home">
    <form action="/src/services/auth/signin.php" method="post">
        <div class="col d-flex justify-content-center my-5">
            <h1 class="forgot-text">{{ title }}</h1>
        </div>
        {% if errors %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {% for error in errors %}
            {{ error }}<br>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endif %}

        <div class="col my-2">
            <!-- Password -->
            <input type="password" class="form-control" name="password" minlength="6" placeholder="Palavra-chave" required />
        </div>
        <div class="col my-3">
            <!-- Confirm Password -->
            <input type="password" class="form-control" name="confirm_password" minlength="6" placeholder="Confirmar palavra-chave" required />
        </div>
        <input name="token" value="{{ token }}" type="hidden">
        <input name="user_id" value="{{ user_id }}" type="hidden">
        <input name="path" value="{{ path }}" type="hidden">
        <div class="d-flex justify-content-center my-5">
            <button class="btn blue" type="submit" name="user" value="reset">Atualizar</button>
        </div>
    </form>
</main>
{% endblock %}